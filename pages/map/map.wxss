page{
    overflow-y: hidden;
}
.container{
    width:100%;
    height:100%;
}

.bg{
    width:100%;
    background-size:100% auto;
    background-position:top center; 
    z-index:-99;
    position: absolute;
    top:0;
    left:0;
}
.map{
    width: 100%;
    min-height: 100%;
    position: absolute;
    top:0;
    left:0;
}

.btn-area .page-body-button{
    margin:10rpx 0;
    font-size:24rpx;
}

.toggleBigSmall{
    width:75rpx;
    position: absolute;
    bottom:60rpx;
    right:10rpx;
    z-index:99;
}
.toggleBigSmall .btn{
    display: block;
    text-align:center;
    width:50rpx;
    height:50rpx;
    border:1px solid #eee;
    background:#fff;
    margin: 10rpx 0;
    padding:10rpx;
}

.gradient{
    background: #aa4b6b;  /* fallback for old browsers */
    background: -webkit-linear-gradient(to top, #3b8d99, #6b6b83, #aa4b6b);  /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to top, #3b8d99, #6b6b83, #aa4b6b); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
}